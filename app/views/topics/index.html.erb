<div class="container mx-auto">
  <div class="text-center">
    <%= render 'topics/form', topic: @topic %>
    <div class="flex justify-evenly">
      <%= link_to '#', class: 'text-green-700' do %>
        <i class="fas fa-chevron-left fa-lg mt-2"></i>
      <% end %>
      <h1 class="text-4xl text-green-700 text-center font-semibold"><%= @month.begin.mon %>月</h1>
      <%= link_to '#', class: 'text-green-700' do %>
        <i class="fas fa-chevron-right fa-lg mt-2"></i>
      <% end %>
    </div>
    <%= render partial: 'topics/card', collection: @topics, as: 'topic' %>
    <div class="bg-green-500 text-white w-48 mx-auto mb-36 mt-10">
      <%= link_to 'カードを追加', '#modal_a', class: "card" %>
    </div>
    <div class="remodal" data-remodal-id="modal_a">
      <button data-remodal-action="close" class="remodal-close"></button>
      <h1>Remodalサンプル</h1>
      <p>テキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキスト</p>
      <br>
      <button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
      <button data-remodal-action="confirm" class="remodal-confirm">OK</button>
    </div>
  </div>
</div>
