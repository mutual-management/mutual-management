<%= form_with model: topic, local: true do |f| %>
  <div class="form-group">
    <%= f.date_field :month, value: Time.now.strftime("%Y-%m-%d"), class: 'h-24 text-2xl mr-96 bg-gray-700 text-white' %>
  </div>
  <div class="form-group">
    <%= f.text_area :content, placeholder: 'タップしてTopicを入力してください', class: 'card-write w-96 h-48 text-3xl bg-gray-700 text-white resize-none' %>
  </div>
  <div class="form-button">
    <%= f.submit '登録', class: 'mt-3 w-48 text-2xl bg-green-500 text-white' %>
  </div>
<% end %>
