<% # モーダル領域 %>
<div class="schedule-modal-content hidden fixed z-10 inset-0 overflow-y-auto text-center" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="modal-close fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
  <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
  <div class="container inline-block align-middle bg-black rounded-lg overflow-hidden shadow-xl transform text-left p-8">
    <h1 class="text-white">予定入力</h1>
    <%= form_with model: @schedule, url: schedules_path, local: true do |f| %>
      <div class="grid grid-cols-6 rounded-lg border-4 border-green-400 content-center py-4">
        <div class="flex col-start-2 col-span-4 grid grid-cols-5 py-1 text-white">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "col-start-3 col-span-3 border border-green-400 bg-black text-xl text-white pl-2" %>
        </div>
        <div class="flex col-start-2 col-span-4 grid grid-cols-5 py-1 text-white">
          <%= f.label :label_color, "ラベル" %>
          <%= f.select "label_color", Schedule.labelColors.map{|key, value| [key, value]}, {include_blank: true}, {class: 'col-start-3 col-span-3 border border-green-400 bg-black text-xl text-white pl-2'} %>
        </div>
        <div class="flex col-start-2 col-span-4 grid grid-cols-5 py-1 text-white">
          <%= f.label :date, "予定日" %>
          <%= f.date_field :date, class: "col-start-3 col-span-3 border border-green-400 bg-black text-xl text-white pl-2" %>
        </div>
        <div class="flex col-start-2 col-span-4 grid grid-cols-5 py-1 text-white">
          <%= f.label :time, "予定時間" %>
          <div class="flex inline-block col-start-3 col-span-1">
            <%= f.time_select :time, {}, { class: "schedule-value inline-block col-start-3 col-span-1 border border-green-400 bg-black text-xl text-white pl-2 mr-2" } %>
          </div>
        </div>
        <div class="flex justify-end col-start-2 col-span-4 py-1">
          <button class="px-2 rounded-lg text-md font-medium text-white schedule-modal-close" type="button" name="button">キャンセル</button>
          <%= f.submit "登録", class: "clender-reload px-2 rounded-lg text-lg font-medium text-red-500 bg-black" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
