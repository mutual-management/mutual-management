

<div class="text-center">
  <%= form_with url: login_path, method: :post do |f| %>
    <div class="grid grid-cols-6 rounded-lg border border-green-300 content-center m-10 p-4">
      <div class="field flex col-start-2 col-span-4 grid grid-cols-5 py-1 text-white">
        <%= f.label :email %>
        <%= f.text_field :email, class:"col-start-3 col-span-3 border border-green-400 bg-black text-xl text-white pl-2" %>
      </div>

      <div class="field flex col-start-2 col-span-4 grid grid-cols-5 py-1 text-white">
        <%= f.label :password %>
        <%= f.text_field :password, class:"col-start-3 col-span-3 border border-green-400 bg-black text-xl text-white pl-2" %>
      </div>

      <div class="field flex col-start-4 col-span-4 text-right grid grid-cols-5 pt-10 actions">
        <%= f.submit 'login', class: "px-2 py-1 bg-green-400 text-lg text-white font-semibold rounded hover:bg-blue-500" %>
      </div>
    </div>
  <% end %>
</div>
