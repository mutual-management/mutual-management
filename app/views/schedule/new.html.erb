<div class="modal-content hidden fixed z-10 inset-0 overflow-y-auto text-center" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="modal-close fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
  <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
  <div class="inline-block align-middle bg-black rounded-lg overflow-hidden shadow-xl transform text-left p-8">
    <%
=begin%>
 <%= form_with model: @schedule, local: true do |f| %>
      <div class="grid grid-cols-6 rounded-lg border-4 border-green-400 content-center py-4">
        <div class="flex col-start-2 col-span-4 grid grid-cols-5 py-1">
          <%= f.text_field :amount, class:"col-start-3 col-span-3 border border-green-400 bg-black text-xl text-white pl-2" %>
          <%= f.hidden_field :title, value: "勉強時間" %>
          <%= f.hidden_field :date, value: @date %>
          <%= f.hidden_field :unit, value: :study %>
          <%= f.hidden_field :expense_category_id, value: 1 %>
          <%# expense_category_id=1は非支出 %>
        </div>
        <div class="flex justify-end col-start-2 col-span-4 py-1">
          <button class="px-2 rounded-lg text-md font-medium text-white modal-close" type="button" name="button">キャンセル</button>
          <%= f.submit "登録", class: "px-2 rounded-lg text-lg font-medium text-red-500 bg-black" %>
        </div>
      </div>
    <% end %>
